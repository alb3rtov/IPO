        <Button x:Name="addImages1" Margin="0,19,0,0" Click="addImages_Click" Grid.Column="1" Grid.Row="12" Grid.RowSpan="2" BorderBrush="Black">
            <Button.Background>
                <ImageBrush ImageSource="Images/default_animal3.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="addImages2" Click="addImages_Click" Grid.Column="3" Grid.Row="11" BorderBrush="Black">
            <Button.Background>
                <ImageBrush ImageSource="Images/default_animal3.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="addImages3" Click="addImages_Click" Grid.Column="1" Grid.Row="11" BorderBrush="Black">
            <Button.Background>
                <ImageBrush ImageSource="Images/default_animal3.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="addImages4" Margin="0,19,0,0" Click="addImages_Click" Grid.Column="3" Grid.Row="12" Grid.RowSpan="2" BorderBrush="Black">
