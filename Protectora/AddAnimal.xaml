        <Button Style="{StaticResource RoundedButtonStyle}" Background="#FF556080" Foreground="White" x:Name="btbAdd" Content="Añadir" Margin="0,14,0,0" Click="btbAdd_Click" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="14" Grid.RowSpan="2"/>
