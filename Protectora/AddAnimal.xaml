        <TextBox x:Name="txtSize" VerticalContentAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,1" Grid.Column="1" Grid.Row="7" LostFocus="txtSize_LostFocus" KeyUp="txtSize_KeyUp">
