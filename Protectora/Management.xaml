<Window x:Class="Protectora.Management"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protectora"
        mc:Ignorable="d"
        Title="Gestion de protectora" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="360*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="787*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <ToolBar x:Name="tbBarraHerramientas" Grid.Row="0" Grid.ColumnSpan="2" Background="White" Margin="0,0,0,31" Grid.RowSpan="2" >
            <Button x:Name="btnAdd" ToolTip="Añadir" Click="btnAniadir_Click">
                <Image Source="Images/add_c2.png" />
            </Button>
            <Button x:Name="btnDelete" ToolTip="Eliminar" Click="btnEliminar_Click">
                <Image Source="Images/remove_c2.png"/>
            </Button>
            <Separator></Separator>
            <Button x:Name="btnExit" ToolTip="Salir" Click="buttonLogout_Click" >
                <Image Source="Images/salir_c.png" />
            </Button>
            <Label x:Name="lblLastDate" FontSize="10" HorizontalAlignment="Center" Width="172" Height="21" VerticalAlignment="Center" Grid.RowSpan="2" Margin="350,0,0,0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.RowSpan="2" Height="38" Width="101" HorizontalAlignment="Center" Margin="20,0,0,0">
                <Image Source="/Images/login_small.png" Height="33" Width="43"/>
                <Label x:Name="lblUser" Content=""  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                <!--
            <Button x:Name="buttonLogout" Width="26" Height="26" Click="buttonLogout_Click" Margin="15,0,0,0" >
                <Button.BorderBrush>
                    <ImageBrush/>
                </Button.BorderBrush>
                <Button.Background>
                    <ImageBrush ImageSource="/Images/logout.png"/>
                </Button.Background>
            </Button>-->

            </StackPanel>
        </ToolBar>




        <TabControl x:Name="tcPestanas" Margin="0,10,10,10" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="1" SelectionChanged="tcPestanas_SelectionChanged">
            <TabItem Header="Animales">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="9"/>
                        <ColumnDefinition Width="579"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="lstListaAnimales" Grid.Column="0" SelectedIndex="0" Margin="5,5,3,5" ItemsSource="{Binding}" MouseLeftButtonUp="lstListaAnimales_MouseLeftButtonUp">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Height="37" Source="{Binding Pictures[0]}"/>
                                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <GridSplitter HorizontalAlignment="Stretch" Margin="2,0,2,0" Grid.Column="1" />
                    <StackPanel x:Name="spDetallesAnimal" Grid.Column="2" Orientation="Vertical" Margin="3,0,221,0">
                        <Label x:Name="lblName" FontWeight="Bold" FontSize="20" Content="{Binding ElementName=lstListaAnimales,Path=SelectedItem.Name}"/>
                        <Label FontWeight="Bold">Sexo:</Label>
                        <Label x:Name="lblSex" Content="{Binding ElementName=lstListaAnimales, Path=SelectedItem.Sex}"/>
                        <Label FontWeight="Bold">Raza:</Label>
                        <Label x:Name="lblBreed" Content="{Binding ElementName=lstListaAnimales, Path=SelectedItem.Breed}"/>
                        <Label FontWeight="Bold">Tamaño:</Label>
                        <Label x:Name="lblSize" Content="{Binding ElementName=lstListaAnimales, Path=SelectedItem.Size}"/>

                    </StackPanel>

                    <StackPanel x:Name="spImage" Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal" Width="264" Margin="0,10,10,154">
                        <Button  x:Name="btbPreviousImage" Width="24" Click="btbPreviousImage_Click" Height="24" Background="{x:Null}" BorderBrush="{x:Null}">
                            <Image Source="Images/previous_b.png" />
                        </Button>
                        <Image x:Name="imgPicture" Height="153" Width="192" Source="{Binding SelectedItem.Pictures[0], ElementName=lstListaAnimales}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,10,0"/>
                        <Button x:Name="btbNextImage" HorizontalAlignment="Right" Width="24" Height="24" Click="btbNextImage_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                            <Image Source="Images/next_b.png" />
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Socios">
                <Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Voluntarios">
                <Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
