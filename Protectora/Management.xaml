<Window x:Class="Protectora.Management"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protectora"
        mc:Ignorable="d"
        Title="Gestion de protectora" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="360*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="628*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Center" Width="140" Height="36" VerticalAlignment="Center" Grid.Row="2">
            <Image Source="/Images/login.png" Height="34" Width="44"/>
            <Label x:Name="lblUser" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
            <Button x:Name="buttonLogout" Width="26" Height="26" Click="buttonLogout_Click" Margin="15,0,0,0" >
                <Button.BorderBrush>
                    <ImageBrush/>
                </Button.BorderBrush>
                <Button.Background>
                    <ImageBrush ImageSource="/Images/logout.png"/>
                </Button.Background>
            </Button>

        </StackPanel>
        <Label x:Name="lblLastDate" FontSize="10" HorizontalAlignment="Center" Width="158" Height="21" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1" Margin="0,10,0,0"/>

        <TabControl x:Name="tcPestanas" Margin="0,0,0,10" Grid.RowSpan="4">
            <TabItem Header="Animales">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="7.375"/>
                        <ColumnDefinition Width="441.625"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="lstListaAnimales" Grid.Column="0" SelectedIndex="0" Margin="5,5,3,5" ItemsSource="{Binding}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Height="37" Source="{Binding Picture}"/>
                                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <GridSplitter HorizontalAlignment="Stretch" Margin="2,0,2,0" Grid.Column="1" />
                    <StackPanel x:Name="spDetallesPelicula" Grid.Column="2" Orientation="Vertical" Margin="61,0,0,0">
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Socios">
                <Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Voluntarios">
                <Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
