<Window x:Class="Protectora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Protectora"
        mc:Ignorable="d"
        Title="MainWindow" Height="576" Width="559" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="405*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0,32,0,0">
            <Label Content="Protectora" Height="79" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0,65,0,73" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <WrapPanel Height="42" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Height="20" Width="20" Source="/img/user_icon.png" OpacityMask="White" Margin="0,0,10,0"/>
                <TextBox Text="Usuario" TextWrapping="Wrap" Width="189" Height="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" TextChanged="TextBox_TextChanged" Margin="0,0,0,0" Padding="5,0,0,0"/>
            </WrapPanel>
            <WrapPanel Height="42">
                <Image Height="20" Width="20" Source="/img/lock_icon.png" OpacityMask="White" Margin="0,0,10,0"/>
                <TextBox Text="Contraseña" TextWrapping="Wrap" Width="189" Height="34" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,0,0,0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>

